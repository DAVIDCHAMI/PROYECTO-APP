<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB4C2BD"
    android:orientation="vertical"
    tools:context=".views.actividades.DescripcionEquipoActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtnombreEquipo"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="EQUIPO"
                android:textSize="30dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imgEquipo"
                android:layout_width="208dp"
                android:layout_height="107dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imaface"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:onClick="onFace"
                android:src="@drawable/ima_fac" />

            <ImageView
                android:id="@+id/imayou"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginRight="10dp"
                android:onClick="onYou"
                android:src="@drawable/mundo3" />

            <ImageView
                android:id="@+id/imaims"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:onClick="onIms"
                android:src="@drawable/ims" />

        </LinearLayout>






    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="FUNDADO EN:"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtaño"
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="AÑO"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtfecha1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="fecha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtfecha2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="fecha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtfecha3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="fecha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtfecha4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="fecha"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtfecha5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="fecha"
                android:textStyle="bold" />

        </LinearLayout>

    <Button
        android:id="@+id/btnregresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="regresar"
        android:text="REGRESAR"
        android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>