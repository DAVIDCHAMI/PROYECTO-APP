<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFD1E1D9"
    tools:context=".Activitys.DetailActivity">

    <TextView
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="PRODUCTO"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtNombre1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Nombre"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtdescripcion1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
       android:hint="DescripciÃ³n"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtcantidad1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Cantidad"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtprecio1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Precio"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtmarca1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Marca"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="onClickRegresar"
        android:id="@+id/btnRegresar1"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="REGRESAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="onClickEliminar"
        android:id="@+id/btnEliminar"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="ELIMINAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>