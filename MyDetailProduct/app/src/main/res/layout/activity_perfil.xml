<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFBCF4D9"
    tools:context=".Activitys.PerfilActivity">

    <TextView

        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="PERFIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <TextView
        android:background="#FFEDE8E8"
        android:id="@+id/txtNombrep"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:background="#FFEDE8E8"
        android:id="@+id/txtusuariop"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:background="#FFEDE8E8"
        android:id="@+id/txtEmailp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



<Button
    android:onClick="onClickEmp"
    android:background="#FF84BBF2"
    android:textSize="20dp"
    android:layout_marginTop="40dp"
    android:text="EMPEZAR"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />



</LinearLayout>